$margin = 1.5em

.UserDrive
  position relative
  width 100%
  height 100%
  .Navigator
    background-color rgb(250,250,250)
    width 100%
    height 48px
    -webkit-flex 1 1 auto
    flex 1 1 auto
    padding-left 16px
    padding-right 16px
    display flex
    flex-direction row
    -webkit-box-shadow 0 2px 4px rgba(0,0,0,.2)
    box-shadow 0 2px 4px rgba(0,0,0,.2)
    background-color #fafafa
    border-bottom 1px solid transparent
    border-top 1px solid #e5e5e5
    height 53px
    justify-content flex-start
    align-items center
    position relative
    z-index 5
    .path
      height 48px
      font-size 16px
      box-sizing border-box
      .name
        cursor pointer
        line-height 48px
        padding 5px
        box-sizing border-box
        &:hover
          box-shadow 0 1px 2px 0 rgba(0,0,0,.1)
          background-color #fff
          border 1px solid #c2c2c2
          border-radius 2px
      .name.last
        font-weight bold
        &:hover
          box-shadow none
          background-color transparent
          border none
          cursor default
      .separator
        line-height 30px
        padding-left 5px
        padding-right 5px
        font
  .container
    display flex
    flex-direction row
    align-items stretch
    align-content stretch
    justify-content flex-start
    margin 0 0
    position relative
    width 100%
    height 100%
    .sidebar
      display flex
      flex-direction column
      align-items center
      max-width 250px
      min-width 202px
      background-color #EEE
      padding 5px
      overflow auto
      flex 0
      border-right 1px solid #CDCDCD
      position relative
      .create-btn
        margin 10px auto
      .options
        li
          margin 10px auto
          .icon
            height 25px
            width 25px
          &:hover
            background-color #CDCDCD
            cursor pointer

    .QuestionExplorer
      width 100%
      flex 1

@import "formulation"
@import "variables"
@import "expresions"
@import "fileSideBar"
@import "questionExplorer"