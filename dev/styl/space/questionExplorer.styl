.QuestionExplorer
	display flex
	height 100%
	width 100%
	flex-direction column
	.Navigator
		background-color rgb(250,250,250)
		width 100%
		height 48px
		-webkit-flex 1 1 auto
		flex 1 1 auto
		padding-left 16px
		padding-right 16px
		display flex
		flex-direction row
		-webkit-box-shadow 0 2px 4px rgba(0,0,0,.2)
		box-shadow 0 2px 4px rgba(0,0,0,.2)
		background-color #fafafa
		border-bottom 1px solid transparent
		border-top 1px solid #e5e5e5
		height 53px
		justify-content flex-start
		align-items center
		position relative
		z-index 5
		.path
			height 48px
			font-size 16px
			box-sizing border-box
			.name
				cursor pointer
				line-height 48px
				padding 5px
				box-sizing border-box
				&:hover
					box-shadow 0 1px 2px 0 rgba(0,0,0,.1)
					background-color #fff
					border 1px solid #c2c2c2
					border-radius 2px
			.name.last
				font-weight bold
				&:hover
					box-shadow none
					background-color transparent
					border none
					cursor default
			.separator
				line-height 30px
				padding-left 5px
				padding-right 5px
				font

	.file-table
		display table
		table-layout fixed
		width 100%

		.headers
			background-color rgb(250,250,250)
			position relative
			width 100%
			display table-header-group

			.header
				display table-cell
				height 48px
				box-sizing border-box
				background-color #fafafa
				vertical-align middle
				border-bottom 1px solid #eee
				.title
					line-height 48px
					text-align left
					padding-left 16px
					font-size 13px

			.header.clickable
				cursor pointer
				&:hover
					background-color #eee
			.header.clickable.clicked
				font-weight bold
	.Row
		display table-row
		width 100%
		height 48px
		box-sizing border-box
		background-color #fff

		.cell
			display table-cell
			width 100%
			line-height 48px
			text-align left
			font-size 13px
			border-bottom 1px solid #eee
			vertical-align middle






